<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="oleg.osipenko.maga.mainactivity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_now_playing"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layoutAnimation="@anim/item_now_playing_animation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/margin_material"
        android:paddingRight="@dimen/margin_material"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@android:color/black"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="@id/pager_now_playing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/title_now_playing"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/title_now_playing"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_material"
        android:textSize="@dimen/text_size_1"
        app:layout_constraintBottom_toBottomOf="@id/pager_now_playing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/title_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_coming_soon"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_2"
        android:paddingStart="@dimen/margin_material"
        android:layout_marginTop="@dimen/margin_material"
        tools:ignore="RtlSymmetry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pager_now_playing"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_coming_soon"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_coming_soon"
        android:layout_marginTop="@dimen/margin_material_half"
        tools:listitem="@layout/item_coming_soon"
        android:layoutAnimation="@anim/item_coming_soon_animation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_coming_soon"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="title"
        android:background="@android:color/transparent"/>

</android.support.constraint.ConstraintLayout>
