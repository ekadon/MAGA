<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/drawer"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="oleg.osipenko.maga.mainactivity.MainActivity"
  >

  <android.support.constraint.ConstraintLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.view.ViewPager
      android:id="@+id/pager_now_playing"
      android:layout_width="0dp"
      android:layout_height="@dimen/height_pager"
      android:layoutAnimation="@anim/item_now_playing_animation"
      android:paddingLeft="@dimen/margin_material"
      android:paddingRight="@dimen/margin_material"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      />

    <ImageView
      android:id="@+id/shader"
      android:layout_width="0dp"
      android:layout_height="100dp"
      android:alpha="0.4"
      android:background="@drawable/shader"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

    <ImageView
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:alpha="0.6"
      android:background="@android:color/black"
      app:layout_constraintBottom_toBottomOf="@id/pager_now_playing"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      tools:ignore="RtlSymmetry"
      />

    <TextView
      android:id="@+id/title_now_playing"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:gravity="center_vertical"
      android:paddingStart="@dimen/margin_material"
      android:text="@string/title_now_playing"
      android:textColor="@android:color/white"
      android:textSize="@dimen/text_size_1"
      app:layout_constraintBottom_toBottomOf="@id/pager_now_playing"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      tools:ignore="RtlSymmetry"
      />

    <TextView
      android:id="@+id/title_coming_soon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_material"
      android:paddingStart="@dimen/margin_material"
      android:text="@string/title_coming_soon"
      android:textColor="@android:color/white"
      android:textSize="@dimen/text_size_2"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/pager_now_playing"
      tools:ignore="RtlSymmetry"
      />

    <android.support.v7.widget.RecyclerView
      android:id="@+id/list_coming_soon"
      android:layout_width="0dp"
      android:layout_height="@dimen/height_coming_soon"
      android:layout_marginTop="@dimen/margin_material_half"
      android:clipToPadding="false"
      android:layoutAnimation="@anim/item_coming_soon_animation"
      android:paddingLeft="@dimen/margin_material"
      android:paddingRight="@dimen/margin_material"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title_coming_soon"
      tools:listitem="@layout/item_coming_soon"
      />

    <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="0dp"
      android:layout_height="?attr/actionBarSize"
      android:background="@android:color/transparent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:title="title"
      app:titleTextColor="@android:color/white"
      android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
      />

    <ProgressBar
      android:id="@+id/progressbar"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:indeterminate="true"
      android:visibility="gone"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/toolbar"
      tools:visibility="visible"
      />

  </android.support.constraint.ConstraintLayout>
  
  <android.support.design.widget.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:menu="@menu/navigation"
    app:itemTextColor="@android:color/white"
    />

</android.support.v4.widget.DrawerLayout>

